

<h1 align="center"><%= @checklist.title %></h1><br>

<div class="span12">
  <div id="gauge" style="width:350px; height:350px">
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="description">Description:</th>
      <th><%= @checklist.description %></th>
    </tr>

   
    <tr>
      <th>
        <div class="check-stats">0/<%= @checklist_run.task_completions.count %></div>
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    <%= simple_form_for [@checklist, @checklist_run] do |f| %>
    <%= f.simple_fields_for :task_completions do |form| %>
    <tr>
      <td id="check-here"> <%= form.input :completed, as: :boolean, label: false %></td>
      <td><%= form.label :completed, label: form.object.task.name %></td>
    </tr>

    <% end %>
    <tr>
       <td></td>
       <td><%= f.submit 'Complete', :class => 'btn btn-create submit-it' %></td>
    </tr>
<% end %>

  </tbody>
</table>

