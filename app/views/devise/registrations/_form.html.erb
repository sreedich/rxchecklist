<!-- <h2>Sign up</h2> -->

<form class="form-horizontal"> 

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>



  <div class="control-group">
    <label class='control-lable'>
      <%= f.label :email %>
    </label>
    <div class ="controls">
      <%= f.email_field :email, :autofocus => true, :placeholder => 'Email', :class => 'static-field' %>
    </div>
  </div>

  <div class='control-group'>
    <label class='control-lable'>
      <%= f.label :password %>
    </label>
    <div class="controls">
      <%= f.password_field :password, :placeholder => 'Password', :class => 'static-field' %>
    </div>
  </div>

  <div class='control-group'>
    <label class='control-lable'>
      <%= f.label :password_confirmation %>
    </label>
    <div class="controls">
      <%= f.password_field :password_confirmation, :placeholder => 'Password Confirmation', :class => 'static-field' %>
    </div>
  </div>

  <div class="control-group"> 
    <div class="controls">
        <%= f.submit "Sign up", :class => 'btn btn-success' %>
    </div>
  </div>

</form>

<% end %>



<% render "devise/shared/links" %>
