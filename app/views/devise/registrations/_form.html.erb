<div class="form-signup">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="control-group">
        <% f.label :email, :class => 'control-label' %>
        <%= f.email_field :email, :autofocus => true, :placeholder => 'Email', :class => 'static-field' %>
    </div>

    <div class='control-group'>
        <%f.label :password, :class => 'control-label'%>
        <%= f.password_field :password, :placeholder => 'Password', :class => 'static-field' %>
    </div>

    <div class='control-group'>
        <% f.label :password_confirmation, :class => 'control-label' %>
        <%= f.password_field :password_confirmation, :placeholder => 'Password Confirmation', :class => 'static-field' %>
    </div>

    <div class="control-group"> 
          <%= f.submit "Sign up", :class => 'btn btn-success' %>
    </div>

  <% end %>
</div>






<% render "devise/shared/links" %>
